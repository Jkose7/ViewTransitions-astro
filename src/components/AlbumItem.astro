---
export interface Props {
    id: string;
    title: string;
    img: string;
}

const { id, title, img } = Astro.props;
---

<a
    class="hover:scale-105 hover:contrast-125 hover:shadow-2xl inline-block transition-all w-full"
    href={`/${id}`}
>
    <img class="aspect-auto object-cover w-full" src={img} alt={`Album ${title}`} />
</a>
